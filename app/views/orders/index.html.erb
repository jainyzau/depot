<h1>Listing orders</h1>
<% if notice %>
    <p id="notice"><%= notice%></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type.name %></td>
        <td><%= link_to 'Show', order %></td>
        <% if order.ship_date.nil?%>
            <td><%= link_to 'Ship', ship_order_path(order) %></td>
        <% else %>
            <td><%= 'Shipped'%></td>
        <% end %>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

